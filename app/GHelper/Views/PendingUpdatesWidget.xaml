<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="GHelper.Views.PendingUpdatesWidget"
       Background="{x:Static Brush.DarkBlue}"
       BorderColor="Transparent"
       HasShadow="True"
       CornerRadius="12"
       HeightRequest="120"
       WidthRequest="240">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Text="{Binding Path=PendingUpdates, StringFormat='Pending updates: {0:D}'}"></Label>
        <Button Grid.Row="1" Text="Go to Updates" Clicked="Button_OnClicked"></Button>
    </Grid>
</Frame>